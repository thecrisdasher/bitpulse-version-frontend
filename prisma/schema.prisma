datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  cliente
  admin
  maestro
}

enum TransactionStatus {
  pending
  completed
  failed
}

enum PositionDirection {
  long
  short
}

enum PositionStatus {
  open
  closed
  liquidated
}

